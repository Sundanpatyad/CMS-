  .button1 {
    --color: #ffffff;
    font-family: inherit;
    display: inline-block;
    width: 5em;
    height: 2.6em;
    line-height: 2.5em;
    margin: 10px 0px;
    position: relative;
    overflow: hidden;
    border: 2px solid var(--color);
    transition: color .5s;
    z-index: 1;
    font-size: 12px;
    border-radius: 0px;
    font-weight: 500;
    color: var(--color);
   }
   
   .button1:before {
    content: "";
    position: absolute;
    z-index: -1;
    background: white;
    background: rgb(63,94,251);
    background: linear-gradient(55deg, rgba(63,94,251,1) 0%, rgba(252,70,248,1) 100%);
    height: 150px;
    width: 200px;
    border-radius: 50%;
   }
   
   .button1:hover {
    color: #fff;
   }
   
   .button1:before {
    top: 100%;
    left: 100%;
    transition: all .7s;
   }
   
   .button1:hover:before {
    top: -30px;
    left: -30px;
   }
   
   .button1:active:before {
    background: #ffffff;
    transition: background 0s;
   }

   .container {
    display: grid;
